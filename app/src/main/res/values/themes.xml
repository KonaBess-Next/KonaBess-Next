<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Material You Design with DayNight support -->
    <style name="Theme.KonaBess" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Core Color Mapping -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>

        <!-- Surface Containers for Flat Hierarchies -->
        <item name="colorSurfaceContainerLow">@color/md_theme_light_surfaceContainerLow</item>
        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainerHigh</item>
    </style>

    <!-- Color Palette 1: Deep Indigo (Default/Purple) -->
    <style name="Theme.KonaBess.Purple" parent="Theme.KonaBess">
        <!-- Already default, but explicit overrides if needed -->
    </style>

    <!-- Color Palette 2: Professional Blue -->
    <style name="Theme.KonaBess.Blue" parent="Theme.KonaBess">
        <item name="colorPrimary">#0D84FF</item> <!-- Vivid Blue -->
        <item name="colorPrimaryContainer">#D3E3FD</item>
        <item name="colorOnPrimaryContainer">#001C3B</item>
        <item name="colorSecondary">#00639B</item>
        <item name="colorSecondaryContainer">#CEE5FF</item>
        <item name="colorOnSecondaryContainer">#001C3B</item> <!-- Dark Text on Light Blue -->
    </style>

    <!-- Color Palette 3: Nature Green -->
    <style name="Theme.KonaBess.Green" parent="Theme.KonaBess">
        <item name="colorPrimary">#006D42</item> <!-- Deep Green -->
        <item name="colorPrimaryContainer">#9AF6B8</item>
        <item name="colorOnPrimaryContainer">#002112</item>
        <item name="colorSecondary">#4D6355</item>
        <item name="colorSecondaryContainer">#D0E8D7</item>
        <item name="colorOnSecondaryContainer">#0F2013</item> <!-- Dark Text on Light Green -->
    </style>

    <!-- Color Palette 4: Vibrant Pink -->
    <style name="Theme.KonaBess.Pink" parent="Theme.KonaBess">
        <item name="colorPrimary">#B90063</item> <!-- Magenta -->
        <item name="colorPrimaryContainer">#FFD9E2</item>
        <item name="colorOnPrimaryContainer">#3E001D</item>
        <item name="colorSecondary">#74565F</item>
        <item name="colorSecondaryContainer">#FFD9E2</item>
        <item name="colorOnSecondaryContainer">#2B151C</item> <!-- Dark Text on Light Pink -->
    </style>

    <!-- Color Palette 5: Pure AMOLED (Black) -->
    <style name="Theme.KonaBess.AMOLED" parent="Theme.KonaBess">
        <item name="android:colorBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorSurfaceContainerLow">#000000</item>
        <item name="colorSurfaceContainer">#000000</item>
        <item name="colorSurfaceContainerHigh">#121212</item> <!-- Slightly lighter for cards -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>
</resources>